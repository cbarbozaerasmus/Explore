#ifndef CUTOFF_H
#define CUTOFF_H

#include "initialise.h"
#include "set.h"

class CUTOFF {
  public:
    float Value;
    SET Set;

    //Constructors and destructors
    CUTOFF();
    CUTOFF(float CValue);                                                       // Create a new cutoff value
    ~CUTOFF();                                                                  // Destructor

    // Modifiers
    void InitialiseSet(vector<CLASSES>* PopulationClasses, OPERATOR* ConditionOperator);

    // Selectors
    float GetValue();                                                           // Return value of this cutoff
    float* GetReferentValue();                                                  // Return a pointer to the value of this cutoff
};

#endif
